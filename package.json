    "@vercel/node": "^2.4.4",
    "framer-motion": "^7.2.1",
    "lord-icon-element": "^3.4.3",
    "lottie-web": "^5.9.6",
    "react": "^18.2.0",
    "react-animations": "^1.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-iframe": "^1.8.0",
    "react-rough-notation": "^1.0.3",
    "styled-components": "^5.3.5",
    "typewriter-effect": "^2.19.0"
  },
  "devDependencies": {
