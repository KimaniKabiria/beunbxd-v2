    "@remix-run/vercel": "^1.7.5",
    "@vercel/node": "^2.6.1",
    "framer-motion": "^7.6.4",
    "lord-icon-element": "^4.0.0",
    "lottie-web": "^5.9.6",
    "react": "^18.2.0",
    "react-animations": "^1.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "react-iframe": "^1.8.5",
    "react-rough-notation": "^1.0.3",
    "styled-components": "^5.3.6",
    "typewriter-effect": "^2.19.0"
  },
  "devDependencies": {
